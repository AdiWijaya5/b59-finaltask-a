{{#>layout title="Type Hero" users=users }}
<section class="bg-gray-50 dark:bg-gray-900">
<div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
      <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
          <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
              <h1 class="text-xl font-bold text-center leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
                  Add Type Hero
              </h1>
              <form action="/addtypehero" method="post" class="space-y-4 md:space-y-6" >
                  <div>
                    <label for="typeHer" class="block mb-2 text-sm font-semibold text-gray-900 dark:text-white">Input your Type Hero</label>
                    <input type="text" name="typeHer" id="namehero" class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="TypeHero" required="">
                  </div>
                  <button type="submit" class="rounded-md w-full mt-2 bg-red-600 py-2 px-4 border border-transparent text-center text-sm text-white transition-all shadow-md hover:shadow-lg focus:bg-red-700 focus:shadow-none active:bg-red-700 hover:bg-red-700 active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none">Save Type</button>
                  <p class="text-sm font-light text-gray-500 dark:text-gray-400">
                      Edit your Type Hero? <a href="/detailtypeHero" class="font-medium text-blue-600 hover:underline dark:text-blue-500">Edit Type</a>
                  </p>
              </form>
          </div>
      </div>
  </div>
  </section>
{{/layout}}